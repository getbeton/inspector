# ============================================
# Database Configuration
# ============================================
# Supabase PostgreSQL connection string (or any PostgreSQL URL)
DATABASE_URL=postgresql://postgres:password@localhost:5432/beton

# Environment: DEV or PROD
ENV=DEV

# Supabase (if using Supabase for database hosting)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-or-service-key

# ============================================
# Encryption (REQUIRED FOR PRODUCTION)
# ============================================
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# This key encrypts API keys stored in the database. DO NOT LOSE IT.
BETON_ENCRYPTION_KEY=

# ============================================
# Integration API Keys (Optional)
# ============================================
# These can also be configured via the Settings UI (stored encrypted in database).
# Environment variables take precedence over database-stored credentials.

# PostHog Analytics
POSTHOG_API_KEY=phx_your_personal_api_key
POSTHOG_PROJECT_ID=12345
POSTHOG_HOST=https://app.posthog.com

# Attio CRM
ATTIO_API_KEY=
ATTIO_WORKSPACE_ID=

# Stripe Billing
STRIPE_API_KEY=sk_test_...

# Apollo Contact Enrichment
APOLLO_API_KEY=

# Gemini AI (for summaries)
GEMINI_API_KEY=

# ============================================
# Sync Configuration
# ============================================
SYNC_ENABLED=false

# ============================================
# Rate Limiting & Performance
# ============================================
# PostHog query budget (queries per hour, max 2400)
POSTHOG_QUERY_BUDGET=2000

# Query cache TTL in seconds
CACHE_TTL_SECONDS=3600

# Attio batch size for bulk operations
ATTIO_BATCH_SIZE=100

# Max concurrent API requests
MAX_CONCURRENT_REQUESTS=5

# ============================================
# Feature Flags
# ============================================
ENABLE_ATTIO_INTEGRATION=true
ENABLE_DASHBOARD_PROVISIONING=true
