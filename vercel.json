{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["iad1"],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, must-revalidate"
        }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/cron/signal-detection",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/cron/mtu-tracking",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/threshold-notifications",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/cron/sync-signals",
      "schedule": "30 */6 * * *"
    }
  ]
}
